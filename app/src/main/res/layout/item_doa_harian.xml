<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rlJudulDoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivGambarDoa"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/doa_harian2"
                    />

                <TextView
                    android:id="@+id/tvJudulDoa"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:maxLines="2"
                    android:text="Doa Bangun Tidur"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <ImageButton
                    android:id="@+id/ibCollapse"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_toRightOf="@id/tvJudulDoa"
                    android:backgroundTint="#5a5959"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c1c0c0"
                />

            <RelativeLayout
                android:id="@+id/rlIsiDoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
            <TextView
                android:id="@+id/tvDoaArab"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="@string/doa_arab"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:maxLines="10"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />

                <TextView
                    android:id="@+id/tvDoaLatin"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDoaArab"
                    android:text="@string/doa_latin"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:maxLines="10"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>